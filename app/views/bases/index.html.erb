<% provide(:title, "拠点一覧") %>
<h1>拠点一覧</h1>
<table class="table-bordered table-striped table-condensed">
  <thead>
    <tr>
      <td></td>
      <td></td>
      <td>base_number</td>
      <td>base_name</td>
      <td>attendance_type</td>
    </tr>
  </thead>
  <tbody>
    <% @bases.each do |base| %>
      <tr>
        <td><%= link_to "編集", edit_basis_path(base), remote: true, class: "btn btn-primary" %></td>
        <td><%= link_to "削除", basis_path(base), remote: true, method: :delete, class: "btn btn-primary" %></td>
        <td><%= base.base_number %></td>
        <td><%= base.base_name %></td>
        <td><%= base.attendance_type %></td>
      </tr>
    <% end %>  
  </tbody>
</table>
<div class="btn-base-create">
  <%= link_to "拠点情報追加", new_basis_path, remote: true, class: "btn btn-primary btn-base-info" %>
</div>

<!--モーダルウインドウ表示-->
<div id="base-info-new" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>